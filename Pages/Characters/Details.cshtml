</div>

<dt class="col-sm-2">
            Inventory
        </dt>
        <dd class="col-sm-10">

        </dd>
        <ul>
                @foreach(var item in Model.Character.Items)
                {
                     <form method="post">
                        <input type="hidden" asp-for="ItemIdToDelete" value="@item.Item.ItemID" />
                        <li>
                            @item.Item.ItemName <input type="submit" Value="Drop" class="btn btn-danger btn-sm my-1" asp-page-handler="DeleteItem" asp-route-id="@Model.Character.CharacterID">
                        </li>
                    </form>
                }
        </ul>
    </dl>
    <div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Character.CharacterID" />
            <div class="form-group">
                <select asp-items="Model.ItemDropDown" asp-for="ItemIdToAdd" class="form-control">
                    <option value="">--Select Item to Add--</option>
                </select>
                <span asp-validation-for="ItemIdToAdd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Item" class="btn btn-primary" asp-page-handler="" asp-route-id="@Model.Character.CharacterID"/>
            </div>
        </form>
    </div>
    </div>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Character.CharacterID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

